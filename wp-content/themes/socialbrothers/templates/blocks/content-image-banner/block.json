{
  "name": "acf/content-image-banner",
  "title": "Content afbeelding banner",
  "category": "sections",
  "icon": "format-image",
  "keywords": ["content", "image"],
  "acf": {
      "mode": "preview"
  },
  "supports": {
      "anchor": true,
      "jsx": true,
      "fullHeight": false,
      "alignText": false,
      "spacing": {
          "margin": [
              "top",
              "bottom"
          ],
          "padding": [
              "top",
              "bottom"
          ]
      },
      "color": {
          "background": false,
          "text": false
      },
      "layout": {
          "default": {
              "type": "flex"
          },
          "allowSwitching": false,
          "allowEditing": true,
          "allowInheriting": false,
          "allowSizingOnChildren": false,
          "allowVerticalAlignment": true,
          "allowJustification": false,
          "allowOrientation": true

      }
  },
  "attributes": {
    "layout": {
      "type": "object",
      "default" : {
        "type": "flex",
        "verticalAlignment":"top",
        "orientation": "vertical"
      }
    },
      "style": {
          "type": "object",
          "default" : {
              "spacing":
              {
                  "padding": {
                      "top": "80px",
                      "bottom": "80px"
                  }
              }
          }
      }
  }
}
