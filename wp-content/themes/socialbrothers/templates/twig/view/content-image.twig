<section class="flex flex-col items-center md:flex-row gap-5 mx-auto justify-center container ">
	<div>
		{% include 'atoms/image.twig' with {'image' : image_id} %}
	</div>

	<div class="flex flex-col w-1/2">
		<p class="text-green-900 font-semibold my-1">{{ sub_title }}</p>

		<h1>{{ title }}</h1>

		{% include 'atoms/text.twig' with {'text': content|raw} %}

		<div>
			{% if buttons %}
				{% for button in buttons %}
					{% include 'atoms/button.twig' with button %}
				{% endfor %}
			{% endif %}
		</div>

</section>
