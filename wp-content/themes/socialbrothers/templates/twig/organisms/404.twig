<section id="{{ anchor }}" class="{{ class_name }} py-10 md:py-20" style="{{ style|raw }}">
    <div class="{{ container|default('container') }}">
        <div class="grid gap-4 md:gap-6 md:grid-cols-2 lg:grid-cols-12">
            <div class="lg:col-span-5">
                <div class="grid gap-10 md:gap-20">
                    <div>
                        {% include 'molecules/content.twig' with {content_single_lead: true} %}
                        <div class="mt-10">
                            {% include 'molecules/search-bar.twig' %}
                        </div>
                    </div>
                    <div>
                        {% include "atoms/heading/h6.twig" with {title: 'Snel naar'|translatable} %}
                        {{ menu|raw }}
                    </div>

                </div>
            </div>
            <div class="lg:col-span-6 lg:col-start-7">
                {% include 'atoms/404-gears.twig' %}
            </div>
        </div>
    </div>
</section>
