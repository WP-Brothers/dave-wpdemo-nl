<section class="w-screen p-2 py-10 md:p-10 md:py-20">
	<div class="flex flex-col items-center md:flex-row gap-10 mx-auto justify-center container">
		<div class="flex flex-col md:w-1/2 w-full">

			<section class="md:w-3/4">
				{% if hero_title != '' %}
					<h1 class"{{ hero_title_size}}">{{ hero_title }}</h1>
				{% endif %}

				{% include 'atoms/text.twig' with {'text': hero_content|raw} %}
			</section>

			<div class=" flex gap-5">
				{% if buttons %}
					{% for button in buttons %}
						{% include 'atoms/button.twig' with button %}
					{% endfor %}
				{% endif %}
			</div>
		</div>

		<div>
			{% include 'atoms/image.twig' with {'image' : image_id} %}
		</div>
	</div>
</section>
